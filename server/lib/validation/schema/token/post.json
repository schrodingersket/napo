{
  "$id": "https://adigitaledge.com/user/post.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Create User",
  "type": "object",
  "properties": {
    "password": {
      "type": "string",
      "description": "The user's new password."
    },
    "username": {
      "type": "string",
      "description": "The user's username."
    },
    "email": {
      "type": "string",
      "description": "The user's e-mail address."
    },
    "client_id": {
      "type": "string",
      "description": "The client ID requesting access."
    },
    "client_secret": {
      "type": "string",
      "description": "The client ID requesting access."
    },
    "grant_type": {
      "type": "string",
      "description": "The client ID requesting access."
    }
  },
  "anyOf": [
    {
      "required": [
        "email"
      ]
    },
    {
      "required": [
        "username"
      ]
    }
  ],
  "required": [
    "password",
    "client_id",
    "grant_type"
  ],
  "additionalProperties": false
}
